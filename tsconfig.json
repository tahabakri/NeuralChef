{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowJs": true,
      "baseUrl": ".",
      "module": "esnext",
      "moduleResolution": "bundler",
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true,
      "paths": {
        "@/*": [
          "./*"
        ]
      },
      "types": ["react", "react-native", "./types/react"],
      "lib": ["esnext"]
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      ".expo/types/**/*.ts",
      "expo-env.d.ts",
      "types/**/*.d.ts"
    ]
  }
